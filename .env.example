# Copy this to `.env` and fill values
APP_ENV=dev
APP_PORT=8000
# Example external services
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Add any project-specific keys below

# Emotion analysis service
EMOTION_API_URL=http://localhost:8082/analyze

# Memory service (if used by a custom adapter)
MEMORY_API_URL=http://localhost:8081/store
MEMORY_API_KEY=test_key_placeholder

# Optional: enable memory logging from server.py
MEMORY_LOGGING=0

# Optional: public base URL for server responses (media links)
PUBLIC_BASE_URL=http://localhost:8000

# Optional: CORS origins (comma-separated, * for all)
CORS_ALLOW_ORIGINS=*

# Optional: LLM response (OpenAI)
# Enable if you want NaMo to generate varied responses (requires OPENAI_API_KEY)
NAMO_LLM_ENABLED=0
NAMO_LLM_MODEL=gpt-4o-mini
NAMO_LLM_TEMPERATURE=0.85
NAMO_LLM_MAX_TOKENS=240
NAMO_LLM_MEMORY_TURNS=6
# NAMO_LLM_SYSTEM_PROMPT="Optional override prompt"

# Telegram Bot Token
TELEGRAM_TOKEN="YOUR_TELEGRAM_TOKEN_HERE"

# Optional: Telegram bot can call REST API directly
NAMO_API_URL=http://localhost:8000
NAMO_API_TIMEOUT=10
TELEGRAM_SHOW_STATUS=0
TELEGRAM_INCLUDE_MEDIA=0
# TELEGRAM_CHAT_ID=000000000

# ElevenLabs TTS
ELEVENLABS_API_KEY="YOUR_ELEVENLABS_KEY_HERE"
# Override voice ifต้องการ (default set to eVItLK1UvXctxuaRV2Oq ในโค้ด)
ELEVENLABS_VOICE_ID="eVItLK1UvXctxuaRV2Oq"
